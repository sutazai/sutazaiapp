[MASTER]
ignore=CVS
persistent=yes
load-plugins=

[MESSAGES CONTROL]
disable=C0111,E0401,C0103

[REPORTS]
output-format=text
reports=no
evaluation=10.0 - ((float(5 * error + warning + refactor + convention) / statement) * 10)

[BASIC]
good-names=i,j,k,ex,Run,_,id,db,df,fp,io
bad-names=foo,bar,baz,toto,tutu,tata
name-group=
include-naming-hint=yes
function-rgx=[a-z_][a-z0-9_]{2,50}$
variable-rgx=[a-z_][a-z0-9_]{2,50}$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$
attr-rgx=[a-z_][a-z0-9_]{2,50}$
argument-rgx=[a-z_][a-z0-9_]{2,50}$
class-attribute-rgx=([A-Za-z_][A-Za-z0-9_]{2,50}|(__.*__))$
inlinevar-rgx=[A-Za-z_][A-Za-z0-9_]*$
class-rgx=[A-Z_][a-zA-Z0-9]+$
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$
method-rgx=[a-z_][a-z0-9_]{2,50}$
no-docstring-rgx=__.*__
docstring-min-length=-1

[FORMAT]
max-line-length=120
single-line-if-stmt=no
max-module-lines=2000
indent-string='    '

[MISCELLANEOUS]
notes=FIXME,XXX,TODO,NOTE,HACK

[SIMILARITIES]
min-similarity-lines=6
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes

[TYPECHECK]
ignore-mixin-members=yes
ignored-classes=SQLObject,numpy,torch,tensorflow

[VARIABLES]
init-import=no
dummy-variables-rgx=_$|dummy

[CLASSES]
defining-attr-methods=__init__,__new__,setUp,setup
valid-classmethod-first-arg=cls
valid-metaclass-classmethod-first-arg=mcs

[DESIGN]
max-args=8
ignored-argument-names=_.*
max-locals=20
max-returns=8
max-branches=15
max-statements=60
max-parents=10
max-attributes=10
min-public-methods=1
max-public-methods=30

[IMPORTS]
deprecated-modules=regsub,TERMIOS,Bastion,rexec

[EXCEPTIONS]
overgeneral-exceptions=builtins.Exception,builtins.BaseException 