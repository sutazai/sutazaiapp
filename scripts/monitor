#!/bin/bash
# SutazAI System Monitor Launcher
# Updated to use static monitor for flicker-free display

set -e

# Check if monitor exists
if [ ! -f "/opt/sutazaiapp/scripts/static_monitor.py" ]; then
    echo "❌ Monitor script not found at /opt/sutazaiapp/scripts/static_monitor.py"
    exit 1
fi

# Check Python availability
if ! command -v python3 &> /dev/null; then
    echo "❌ Python 3 not found"
    exit 1
fi

# Run the monitor
exec python3 "/opt/sutazaiapp/scripts/static_monitor.py" "$@"