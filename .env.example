# SutazAI App Configuration
# Make a copy of this file and rename it to .env

# Application Settings
APP_ENV=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO
API_PORT=8000
WEB_PORT=3000

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400  # 24 hours in seconds

# Database
DB_TYPE=sqlite  # sqlite, postgres
DB_PATH=./data/sutazai.db  # for sqlite
# DB_HOST=localhost  # for postgres
# DB_PORT=5432  # for postgres
# DB_NAME=sutazai  # for postgres
# DB_USER=postgres  # for postgres
# DB_PASSWORD=password  # for postgres

# Model Settings
DEFAULT_MODEL=GPT4All  # GPT4All, DeepSeek-Coder-33B
MODEL_CACHE_DIR=./model_management
MAX_TOKENS=2048
TEMPERATURE=0.7

# OpenAI API (Optional fallback)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_ORGANIZATION=your_openai_org_here

# SuperAGI Configuration
SUPERAGI_API_KEY=your_superagi_key_here
SUPERAGI_BASE_URL=http://localhost:8001

# Document Processing
MAX_DOCUMENT_SIZE_MB=10
SUPPORTED_DOC_TYPES=pdf,docx,txt,md

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Paths
LOGS_DIR=./logs
UPLOAD_DIR=./uploads
TEMP_DIR=./tmp 