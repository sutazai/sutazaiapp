# Sutazai App Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# === Application Settings ===
APP_NAME=sutazai-app
APP_ENV=development
DEBUG=false
LOG_LEVEL=INFO

# === Security ===
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# === Database Configuration ===
# PostgreSQL
POSTGRES_HOST=sutazai-postgres
POSTGRES_PORT=5432
POSTGRES_USER=jarvis
POSTGRES_PASSWORD=change-this-password-in-production
POSTGRES_DB=jarvis_ai

# Redis
REDIS_HOST=sutazai-redis
REDIS_PORT=6379
REDIS_PASSWORD=change-this-password-in-production
REDIS_DB=0

# Neo4j
NEO4J_URI=bolt://sutazai-neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change-this-password-in-production

# === External Services ===
# GitHub (for MCP servers)
# Required scopes: repo, read:org, read:user
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=your-github-personal-access-token-here

# Email Service
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@sutazai.com

# === API Configuration ===
API_V1_STR=/api/v1
CORS_ORIGINS=["http://localhost:11000","http://localhost:3000"]

# === Worker Configuration ===
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker

# === Monitoring ===
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# === Feature Flags ===
ENABLE_RATE_LIMITING=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=false

# === MCP Servers (Optional) ===
# ANTHROPIC_API_KEY=your_anthropic_key_here
# OPENAI_API_KEY=your_openai_key_here