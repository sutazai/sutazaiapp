# API Settings
SECRET_KEY=your-secret-key-here
API_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=your-password-here
DB_NAME=sutazai

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Email
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@sutazai.com
EMAILS_FROM_NAME=SutazAI

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Storage
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Deployment
MIN_CPU_CORES=2
MIN_MEMORY=32G
MAX_DEPLOYMENT_TIME=3600
LOG_RETENTION_DAYS=30
MAX_PARALLEL_PROCESSES=4
DEPLOYMENT_LOCK_FILE=/tmp/sutazai_deployment.lock
BACKUP_DIR=/var/backups/sutazai
CONFIG_ENCRYPTION_KEY=your-encryption-key
NOTIFICATION_EMAIL=admin@sutazai.com
SLACK_WEBHOOK=your-slack-webhook-url
MAX_LOG_SIZE=104857600  # 100MB
BACKUP_RETENTION_DAYS=30
NOTIFICATION_THRESHOLD=90
DEPLOYMENT_TIMEOUT=1800
MAX_CONCURRENT_DOWNLOADS=5
MAX_CPU_USAGE=80
MAX_MEMORY_USAGE=80 