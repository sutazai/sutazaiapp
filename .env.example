# SutazAI Environment Configuration Template
# Copy this file to .env and fill in the actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-here-min-32-chars
APP_HOST=0.0.0.0
APP_PORT=8000

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================
# PostgreSQL (Recommended for production)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sutazai
POSTGRES_USER=sutazai
POSTGRES_PASSWORD=your-secure-password-here

# SQLite (For development/testing)
SQLITE_PATH=data/sutazai.db

# Database URL (will override individual settings if provided)
# DATABASE_URL=postgresql://sutazai:password@localhost:5432/sutazai
# DATABASE_URL=sqlite:///data/sutazai.db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here
REDIS_DB=0

# Redis URL (will override individual settings if provided)
# REDIS_URL=redis://user:password@localhost:6379/0

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here
EMAIL_FROM_ADDRESS=noreply@sutazai.com
EMAIL_FROM_NAME=SutazAI System

# SMTP Settings (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# =============================================================================
# AI/ML API KEYS
# =============================================================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google AI
GOOGLE_AI_API_KEY=your-google-ai-key-here

# Hugging Face
HUGGINGFACE_API_KEY=hf_your-huggingface-token-here

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your-qdrant-api-key-here

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp

# =============================================================================
# CLOUD STORAGE (Optional)
# =============================================================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=us-west-2
S3_BUCKET=sutazai-storage

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCS_BUCKET=sutazai-storage

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Sentry
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# Prometheus
PROMETHEUS_HOST=localhost
PROMETHEUS_PORT=9090

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-different-from-main-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Development flags
SQL_DEBUG=false
MOCK_EMAIL=true
MOCK_AI_RESPONSES=false

# Testing
TEST_DATABASE_URL=sqlite:///test_sutazai.db
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# SSL/TLS
SSL_CERT_PATH=/path/to/certificate.pem
SSL_KEY_PATH=/path/to/private-key.pem

# Load Balancer
LOAD_BALANCER_HEALTH_CHECK=true
HEALTH_CHECK_PATH=/health

# Worker Configuration
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_CONNECTIONS=1000
WORKER_TIMEOUT=30

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Discord Integration
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook

# Telegram Integration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_USER_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_API_RATE_LIMITING=true
ENABLE_FILE_UPLOADS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADVANCED_ANALYTICS=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_ROTATION=1 day
LOG_RETENTION=30 days
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_LOGGING=false

# =============================================================================
# DEPLOYMENT INFORMATION
# =============================================================================
DEPLOYMENT_ID=sutazai-prod-001
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_REGION=us-west-2

# Container/Kubernetes
CONTAINER_NAME=sutazai-app
NAMESPACE=sutazai
POD_NAME=sutazai-pod

# =============================================================================
# NOTES & INSTRUCTIONS
# =============================================================================
#
# 1. Copy this file to .env in the same directory
# 2. Replace all placeholder values with your actual configuration
# 3. Never commit .env files to version control
# 4. For production, consider using a secret management service
# 5. Ensure all required API keys are obtained from respective services
# 6. Test your configuration with: python main.py --info
#
# Required for basic functionality:
#   - SECRET_KEY (generate with: openssl rand -hex 32)
#   - Database configuration (PostgreSQL or SQLite)
#   - At least one AI API key (OpenAI recommended)
#
# Optional but recommended:
#   - Email configuration for notifications
#   - Redis for caching and session management
#   - Vector database for advanced AI features
#
# =============================================================================