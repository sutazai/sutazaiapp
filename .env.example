# SutazAI Environment Configuration
# Copy this file to .env and update with your secure values

# Database Configuration
POSTGRES_USER=sutazai
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_DB=sutazai

# Redis Configuration  
REDIS_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Neo4j Configuration
NEO4J_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Application Security
SECRET_KEY=CHANGE_ME_TO_SECURE_SECRET_KEY
JWT_SECRET=CHANGE_ME_TO_SECURE_JWT_SECRET

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO

# API Keys (if needed)
OPENAI_API_KEY=your-api-key-here
ANTHROPIC_API_KEY=your-api-key-here

# Monitoring
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# URLs (derived from above)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0