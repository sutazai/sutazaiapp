{
  "dashboard": {
    "name": "Codebase Hygiene Monitoring Dashboard",
    "version": "1.0.0",
    "refresh_interval": 5000,
    "theme": "dark"
  },
  
  "api": {
    "base_url": "http://localhost:8090/api/v1",
    "websocket_url": "ws://localhost:8090/ws/monitoring",
    "timeout": 30000
  },
  
  "widgets": [
    {
      "id": "compliance-overview",
      "type": "scorecard",
      "title": "Overall Compliance Score",
      "position": { "x": 0, "y": 0, "w": 12, "h": 4 },
      "data_source": "/monitoring/status",
      "refresh": 10000,
      "thresholds": {
        "critical": 60,
        "warning": 80,
        "good": 95
      }
    },
    
    {
      "id": "rule-status-grid",
      "type": "grid",
      "title": "Rule Enforcement Status",
      "position": { "x": 0, "y": 4, "w": 8, "h": 6 },
      "data_source": "/monitoring/rules",
      "columns": [
        { "field": "rule_id", "header": "Rule" },
        { "field": "description", "header": "Description" },
        { "field": "status", "header": "Status", "type": "badge" },
        { "field": "last_run", "header": "Last Run", "type": "datetime" },
        { "field": "violations", "header": "Violations", "type": "number" }
      ]
    },
    
    {
      "id": "agent-activity",
      "type": "timeline",
      "title": "Agent Activity Timeline",
      "position": { "x": 8, "y": 4, "w": 4, "h": 6 },
      "data_source": "/monitoring/agent-activity",
      "websocket_events": ["agent_execution_started", "agent_execution_completed"]
    },
    
    {
      "id": "violation-heatmap",
      "type": "heatmap",
      "title": "Violation Heat Map",
      "position": { "x": 0, "y": 10, "w": 6, "h": 6 },
      "data_source": "/monitoring/violations/heatmap",
      "color_scheme": "red-yellow-green",
      "dimensions": {
        "x": "directory",
        "y": "rule",
        "value": "violation_count"
      }
    },
    
    {
      "id": "resource-usage",
      "type": "chart",
      "title": "System Resource Usage",
      "position": { "x": 6, "y": 10, "w": 6, "h": 6 },
      "chart_type": "line",
      "data_source": "/monitoring/metrics",
      "websocket_events": ["resource_update"],
      "series": [
        { "name": "CPU Usage", "field": "cpu_percent", "color": "#3498db" },
        { "name": "Memory Usage", "field": "memory_percent", "color": "#e74c3c" },
        { "name": "Active Tasks", "field": "active_tasks", "color": "#2ecc71", "yAxis": 1 }
      ]
    },
    
    {
      "id": "recent-violations",
      "type": "list",
      "title": "Recent Violations",
      "position": { "x": 0, "y": 16, "w": 4, "h": 6 },
      "data_source": "/monitoring/violations/recent",
      "websocket_events": ["rule_violation_detected"],
      "max_items": 10,
      "item_template": {
        "primary": "{rule} - {file}",
        "secondary": "{timestamp}",
        "badge": "{severity}"
      }
    },
    
    {
      "id": "enforcement-queue",
      "type": "queue",
      "title": "Enforcement Queue",
      "position": { "x": 4, "y": 16, "w": 4, "h": 6 },
      "data_source": "/orchestration/queue",
      "show_progress": true,
      "actions": ["pause", "resume", "cancel"]
    },
    
    {
      "id": "daily-summary",
      "type": "stats",
      "title": "24-Hour Summary",
      "position": { "x": 8, "y": 16, "w": 4, "h": 6 },
      "data_source": "/monitoring/summary/daily",
      "stats": [
        { "label": "Total Scans", "field": "total_scans", "icon": "scan" },
        { "label": "Violations Found", "field": "violations_found", "icon": "warning" },
        { "label": "Auto-Fixed", "field": "auto_fixed", "icon": "check", "color": "green" },
        { "label": "Manual Review", "field": "manual_review", "icon": "user", "color": "orange" }
      ]
    }
  ],
  
  "alerts": {
    "enabled": true,
    "sound": true,
    "desktop_notifications": true,
    "rules": [
      {
        "id": "critical-violation",
        "condition": "violation.severity === 'critical'",
        "message": "Critical hygiene violation detected: {violation.description}",
        "priority": "high"
      },
      {
        "id": "system-overload",
        "condition": "metrics.cpu_percent > 90 || metrics.memory_percent > 90",
        "message": "System resources critical - enforcement may be delayed",
        "priority": "high"
      },
      {
        "id": "agent-failure",
        "condition": "agent.status === 'failed'",
        "message": "Agent {agent.name} failed: {agent.error}",
        "priority": "medium"
      }
    ]
  },
  
  "filters": {
    "time_ranges": ["1h", "6h", "24h", "7d", "30d"],
    "default_range": "24h",
    "rule_categories": [
      { "id": "critical", "name": "Critical", "rules": [2, 9, 10, 12, 13] },
      { "id": "structural", "name": "Structural", "rules": [1, 3, 7, 8, 11] },
      { "id": "organizational", "name": "Organizational", "rules": [4, 5, 6, 14, 15, 16] }
    ]
  },
  
  "export": {
    "formats": ["json", "csv", "pdf"],
    "scheduled_reports": [
      {
        "name": "daily-summary",
        "schedule": "0 6 * * *",
        "format": "pdf",
        "recipients": ["hygiene-admin@company.com"]
      },
      {
        "name": "weekly-compliance",
        "schedule": "0 9 * * 1",
        "format": "pdf",
        "recipients": ["tech-lead@company.com", "cto@company.com"]
      }
    ]
  }
}