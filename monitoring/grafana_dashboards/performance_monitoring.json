{
  "dashboard": {
    "id": null,
    "uid": "sutazai-performance",
    "title": "SutazAI Performance Monitoring",
    "tags": ["performance", "containers", "cpu", "memory"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "title": "Container CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{container_label_com_docker_compose_service=~\"sutazai-.*\"}[5m]) * 100",
            "legendFormat": "{{container_label_com_docker_compose_service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "CPU %",
            "show": true
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [80],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "High CPU Usage Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "title": "Container Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{container_label_com_docker_compose_service=~\"sutazai-.*\"} / 1024 / 1024",
            "legendFormat": "{{container_label_com_docker_compose_service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "mbytes",
            "label": "Memory (MB)",
            "show": true
          }
        ]
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8},
        "title": "Container Count",
        "type": "singlestat",
        "targets": [
          {
            "expr": "count(container_last_seen{container_label_com_docker_compose_service=~\"sutazai-.*|mcp-.*\"})",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "none",
        "thresholds": "23,30",
        "colors": ["green", "yellow", "red"],
        "colorBackground": true,
        "postfix": " containers"
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 8},
        "title": "Backend Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"sutazai-backend\"}[5m]))",
            "legendFormat": "p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"sutazai-backend\"}[5m]))",
            "legendFormat": "p99",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Response Time",
            "show": true
          }
        ]
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 8},
        "title": "MCP Server Health",
        "type": "table",
        "targets": [
          {
            "expr": "up{job=~\"mcp-.*\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "styles": [
          {
            "alias": "Status",
            "colorMode": "cell",
            "colors": ["rgba(245, 54, 54, 0.9)", "rgba(237, 129, 40, 0.89)", "rgba(50, 172, 45, 0.97)"],
            "decimals": 0,
            "pattern": "Value",
            "thresholds": [0.5, 1],
            "type": "number",
            "unit": "none"
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "title": "System Resource Overview",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total[5m]) * 100",
            "format": "heatmap",
            "legendFormat": "{{container_name}}",
            "refId": "A"
          }
        ],
        "dataFormat": "tsbuckets",
        "yAxis": {
          "format": "percent",
          "show": true
        },
        "cards": {
          "cardPadding": 2,
          "cardRound": 2
        },
        "color": {
          "mode": "spectrum",
          "scheme": "interpolateRdYlGn",
          "exponent": 0.5
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "container",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(container_last_seen, container_label_com_docker_compose_service)",
          "multi": true,
          "includeAll": true,
          "refresh": 1
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\"}",
          "iconColor": "rgba(255, 96, 96, 1)",
          "name": "Alerts",
          "step": "60s",
          "tagKeys": "alertname",
          "titleFormat": "{{ alertname }}",
          "textFormat": "{{ description }}"
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}