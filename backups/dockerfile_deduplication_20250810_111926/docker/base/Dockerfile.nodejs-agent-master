# SutazAI Node.js Agent Master Base Image
# Multi-stage build for security and efficiency
# Author: DevOps Manager - Deduplication Operation
# Date: August 10, 2025

FROM node:18-slim as base

# Install system dependencies including Python for ML integration
RUN apt-get update && apt-get install -y \
    curl \
    git \
    python3 \
    python3-pip \
    python3-dev \
    build-essential \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Install common Node.js packages globally
RUN npm install -g \
    pm2 \
    typescript \
    ts-node

# Install common Python packages for AI integration
COPY base-requirements-nodejs.txt /tmp/
RUN pip3 install --no-cache-dir --break-system-packages -r /tmp/base-requirements-nodejs.txt \
    && rm /tmp/base-requirements-nodejs.txt

# Create secure non-root user
RUN groupadd -r appuser && useradd -r -g appuser -s /bin/bash appuser \
    && mkdir -p /app /app/data /app/logs /app/workspace \
    && chown -R appuser:appuser /app

# Production stage
FROM base as production

WORKDIR /app

# Standard environment variables
ENV NODE_ENV=production \
    NPM_CONFIG_CACHE=/tmp/.npm \
    PATH=/app/node_modules/.bin:$PATH

# Copy package.json template
COPY base-package.json package.json

# Install common dependencies
RUN npm install --production \
    && npm cache clean --force

# Health check template
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:${SERVICE_PORT:-8080}/health || exit 1

# Switch to non-root user
USER appuser

# Default command
CMD ["node", "index.js"]