# SutazAI MCP Server Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://sutazai:sutazai_password@localhost:5432/sutazai
REDIS_URL=redis://:redis_password@localhost:6379/0

# SutazAI Service URLs
BACKEND_API_URL=http://localhost:8000
OLLAMA_URL=http://localhost:11434
CHROMADB_URL=http://localhost:8000
QDRANT_URL=http://localhost:6333
NEO4J_URL=bolt://localhost:7687

# Authentication (if required)
API_KEY=your-api-key-here
SECRET_KEY=your-secret-key-here

# Model Configuration
DEFAULT_EMBEDDING_MODEL=nomic-embed-text
DEFAULT_CHAT_MODEL=deepseek-r1:8b
MAX_CONTEXT_LENGTH=8192

# Performance Settings
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT_SECONDS=300
CONNECTION_POOL_SIZE=20
CACHE_TTL_SECONDS=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/opt/sutazaiapp/logs/mcp_server.log

# Security Settings
CORS_ORIGINS=*
RATE_LIMIT_PER_MINUTE=100
MAX_REQUEST_SIZE_MB=100

# Features Flags
ENABLE_AGENT_DEPLOYMENT=true
ENABLE_MODEL_MANAGEMENT=true
ENABLE_KNOWLEDGE_QUERIES=true
ENABLE_SYSTEM_MONITORING=true
ENABLE_MULTI_AGENT_ORCHESTRATION=true

# Development Settings
DEBUG_MODE=false
MOCK_EXTERNAL_SERVICES=false
ENABLE_QUERY_LOGGING=false
ENABLE_PERFORMANCE_METRICS=true

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/opt/sutazaiapp/backups/mcp_server

# Docker Integration
DOCKER_HOST=unix:///var/run/docker.sock
COMPOSE_PROJECT_NAME=sutazai

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL_SECONDS=30 