{
  "version": "1.0.0",
  "communication_protocols": {
    "primary": "http",
    "fallback": "direct",
    "message_queue": "redis"
  },
  "service_discovery": {
    "method": "docker_network",
    "network_name": "sutazai-network",
    "registry_endpoint": "http://backend:8000/api/agents/registry"
  },
  "message_routing": {
    "broker_type": "redis",
    "broker_url": "redis://redis:6379/1",
    "channels": {
      "task_queue": "sutazai:tasks",
      "status_updates": "sutazai:status",
      "coordination": "sutazai:coord",
      "health_checks": "sutazai:health"
    }
  },
  "agent_endpoints": {
    "base_port": 8080,
    "health_path": "/health",
    "status_path": "/status",
    "tasks_path": "/tasks"
  },
  "timeout_settings": {
    "health_check_timeout": 10,
    "task_execution_timeout": 300,
    "startup_timeout": 60,
    "shutdown_timeout": 30
  },
  "resource_management": {
    "max_concurrent_agents": 15,
    "resource_allocation_strategy": "phases",
    "phases": {
      "1": {
        "name": "Core Critical",
        "max_agents": 5,
        "cpu_limit": "2.0",
        "memory_limit": "4G",
        "priority": "high"
      },
      "2": {
        "name": "Performance Enhancement", 
        "max_agents": 10,
        "cpu_limit": "1.0",
        "memory_limit": "2G",
        "priority": "medium"
      },
      "3": {
        "name": "Specialized Functions",
        "max_agents": 20,
        "cpu_limit": "0.5", 
        "memory_limit": "1G",
        "priority": "low"
      }
    }
  },
  "health_monitoring": {
    "enabled": true,
    "check_interval": 30,
    "failure_threshold": 3,
    "recovery_strategy": "restart_graceful"
  },
  "load_balancing": {
    "strategy": "resource_aware",
    "weight_factors": {
      "cpu_usage": 0.4,
      "memory_usage": 0.3,
      "task_queue_size": 0.3
    }
  }
}