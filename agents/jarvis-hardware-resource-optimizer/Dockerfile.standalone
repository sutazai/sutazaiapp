# SutazAI Jarvis Hardware Resource Optimizer - Standalone Production Image
FROM python:3.12.8-slim-bookworm

# Create non-root user
RUN groupadd -g 1001 appgroup && \
    useradd -r -u 1001 -g appgroup appuser

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Set working directory
WORKDIR /app

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn==0.24.0 \
    pydantic==2.5.0 \
    requests==2.31.0 \
    psutil==5.9.6 \
    prometheus-client==0.19.0 \
    structlog==23.2.0

# Copy application code
COPY . .

# Change ownership to non-root user
RUN chown -R appuser:appgroup /app

# Environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV SERVICE_PORT=8081
ENV AGENT_ID=jarvis-hardware-resource-optimizer
ENV AGENT_NAME="Jarvis Hardware Resource Optimizer"
ENV AGENT_TYPE=jarvis-hardware-resource-optimizer

# Health check
HEALTHCHECK --interval=60s --timeout=15s --start-period=10s --retries=2 \
    CMD curl -f http://localhost:8081/health || exit 1

# Expose port
EXPOSE 8081

# Switch to non-root user
USER appuser

# Start service
CMD ["python", "app.py"]