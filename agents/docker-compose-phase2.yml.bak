      sh -c "apt-get update && apt-get install -y curl &&
             pip install --no-cache-dir fastapi uvicorn litellm httpx &&
             python /app/agentzero_local.py"
    ports:
      - "11408:8000"
    networks:
      - sutazai-network
    environment:
      - OLLAMA_API_BASE=http://ollama:11434
      - LLM_MODEL=tinyllama
      - PYTHONUNBUFFERED=1
    volumes:
      - ./wrappers/agentzero_local.py:/app/agentzero_local.py:ro
      - ./wrappers/base_agent_wrapper.py:/app/base_agent_wrapper.py:ro
    mem_limit: 384m
    cpus: 0.4
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 60s
      timeout: 20s
      retries: 5

  # BigAGI - Chat Interface
