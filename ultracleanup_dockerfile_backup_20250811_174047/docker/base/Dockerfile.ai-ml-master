
FROM python:3.11-slim

# Master AI/ML Base Image
# Consolidates AI/ML services including Ollama integrations

# Security: Run as non-root user
RUN groupadd -r appuser && useradd -r -g appuser appuser

# System dependencies
RUN apt-get update && apt-get install -y     gcc     g++     curl     wget     && rm -rf /var/lib/apt/lists/*

# AI/ML Python packages
RUN pip install --no-cache-dir     torch==2.1.0     transformers==4.35.0     numpy==1.24.3     scikit-learn==1.3.0     fastapi==0.104.1     uvicorn==0.24.0     httpx==0.25.2     ollama==0.1.7

# Working directory
WORKDIR /app

# Switch to non-root user
USER appuser

# Default health check
HEALTHCHEK --interval=30s --timeout=10s --start-period=5s --retries=3     CMD ["python", "-c", "print('healthy')"]

# Default command
CMD ["python", "app.py"]
