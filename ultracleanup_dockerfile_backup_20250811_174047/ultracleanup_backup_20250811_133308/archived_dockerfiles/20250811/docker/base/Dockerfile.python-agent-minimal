# Minimal Python Agent Base for quick testing
# ULTRAFIX: Updated to Python 3.12.8-slim-bookworm for consistency
FROM python:3.12.8-slim-bookworm

# Essential dependencies only
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd -r appuser && useradd -r -g appuser appuser \
    && mkdir -p /app && chown -R appuser:appuser /app

WORKDIR /app

# Common Python packages (minimal set)
RUN pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn==0.24.0 \
    requests==2.31.0 \
    prometheus-client==0.19.0

ENV PYTHONPATH=/app \
    PYTHONUNBUFFERED=1 \
    SERVICE_PORT=8080

HEALTHCHECK CMD curl -f http://localhost:${SERVICE_PORT}/health || exit 1

USER appuser
CMD ["python", "-u", "app.py"]