      "parameters": {
        "context_length": 2048,
        "temperature": 0.7
      },
      "memory_gb": 4,
      "quantization": "q4_0"
    },
    "deepseek-coder": {
      "name": "DeepSeek Coder (Ollama)",
      "type": "ollama",
      "framework": "langchain",
