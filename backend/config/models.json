      "framework": "langchain",
      "parameters": {
        "model": "llama3-chatqa",
        "base_url": "http://127.0.0.1:11434",
        "temperature": 0.7,
        "top_p": 0.95,
        "num_ctx": 8192
      },
      "capabilities": [
        "text_generation",
        "chat"
      ]
    },
    "gpt4all-falcon": {
      "type": "large_language_model",
