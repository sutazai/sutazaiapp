        "top_p": 0.95,
        "num_ctx": 16384
      },
      "capabilities": [
        "code_generation",
        "text_generation",
        "chat"
      ]
    },
    "chroma-store": {
      "name": "Chroma Vector Store",
      "type": "vector_store",
      "framework": "chromadb",
      "parameters": {
        "persist_directory": "data/vectors/chroma",
