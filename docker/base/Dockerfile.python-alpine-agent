# Optimized Alpine-based Python agent Dockerfile
# This prevents the common build issues with Alpine containers

FROM python:3.11-alpine

# Install build dependencies first (permanent layer)
RUN apk add --no-cache \
    gcc \
    musl-dev \
    linux-headers \
    python3-dev \
    curl \
    && pip install --no-cache-dir \
        fastapi \
        uvicorn \
        requests \
        redis \
        psutil

# Create app directory
WORKDIR /app

# Add health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Copy default application template
COPY agent_template.py /app/agent_template.py

# Default startup script that can be overridden
COPY startup.sh /startup.sh
RUN chmod +x /startup.sh

EXPOSE 8080

CMD ["/startup.sh"]