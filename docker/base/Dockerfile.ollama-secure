FROM ollama/ollama:0.11.4
LABEL maintainer="SutazAI Security Team"
LABEL security.hardening="enabled"

# Note: Ollama typically runs as root for GPU access
# In production, consider using rootless containers with proper GPU delegation
EXPOSE 11434
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \

# Security: Create non-root user
RUN addgroup -g 1001 appgroup && \
    adduser -D -u 1001 -G appgroup -s /bin/sh appuser

# Change ownership of application files
RUN chown -R appuser:appgroup /app || true

# Switch to non-root user
USER appuser

    CMD curl -f http://localhost:${PORT:-8000}/health || exit 1
# Health check for service availability

