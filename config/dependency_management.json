{
    "project_name": "SutazAI",
    "version": "2.0.0",
    "dependency_management": {
        "python_version": "3.12+",
        "package_managers": [
            "pip",
            "poetry"
        ],
        "virtual_environment": {
            "tool": "venv",
            "recommended_path": "./venv"
        }
    },
    "dependency_categories": {
        "core": [
            "networkx",
            "matplotlib",
            "pyyaml",
            "rich"
        ],
        "security": [
            "safety",
            "pylint",
            "cryptography",
            "authlib"
        ],
        "performance": [
            "psutil",
            "radon"
        ],
        "development": [
            "pytest",
            "mypy",
            "black",
            "isort"
        ]
    },
    "version_constraints": {
        "minimum_versions": {
            "networkx": "3.3",
            "matplotlib": "3.9.0",
            "safety": "3.3.0"
        }
    },
    "update_policy": {
        "frequency": "monthly",
        "strategy": "conservative",
        "auto_update_threshold": "patch"
    }
}