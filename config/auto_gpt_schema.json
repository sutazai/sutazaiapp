{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "AutoGPT Agent Configuration",
    "type": "object",
    "properties": {
        "agent_name": {
            "type": "string",
            "description": "Unique name for the AutoGPT agent instance"
        },
        "model_config": {
            "type": "object",
            "properties": {
                "model_name": {
                    "type": "string",
                    "enum": [
                        "gpt-4",
                        "gpt-3.5-turbo",
                        "deepseek-coder"
                    ]
                },
                "temperature": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 2,
                    "default": 0.7
                },
                "max_tokens": {
                    "type": "integer",
                    "minimum": 50,
                    "maximum": 4096,
                    "default": 1024
                }
            },
            "required": [
                "model_name"
            ]
        },
        "task_constraints": {
            "type": "object",
            "properties": {
                "max_iterations": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 100,
                    "default": 25
                },
                "time_limit_minutes": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 1440,
                    "default": 60
                }
            }
        },
        "logging_config": {
            "type": "object",
            "properties": {
                "log_level": {
                    "type": "string",
                    "enum": [
                        "DEBUG",
                        "INFO",
                        "WARNING",
                        "ERROR",
                        "CRITICAL"
                    ],
                    "default": "INFO"
                },
                "log_to_file": {
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "performance_tracking": {
            "type": "object",
            "properties": {
                "track_performance": {
                    "type": "boolean",
                    "default": true
                },
                "performance_threshold": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1,
                    "default": 0.8
                }
            }
        }
    },
    "required": [
        "agent_name",
        "model_config"
    ],
    "additionalProperties": false
}