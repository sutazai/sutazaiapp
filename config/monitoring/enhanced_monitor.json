{
  "refresh_rate": 2.0,
  "adaptive_refresh": true,
  "thresholds": {
    "cpu_warning": 70,
    "cpu_critical": 85,
    "memory_warning": 75,
    "memory_critical": 90,
    "disk_warning": 80,
    "disk_critical": 90,
    "response_time_warning": 1000,
    "response_time_critical": 5000,
    "network_warning_mbps": 50,
    "network_critical_mbps": 100
  },
  "agent_monitoring": {
    "enabled": true,
    "timeout": 2,
    "max_agents_display": 6,
    "health_check_interval": 30,
    "retry_attempts": 1
  },
  "logging": {
    "enabled": false,
    "file": "/tmp/enhanced_monitor.log",
    "level": "INFO",
    "max_size_mb": 10,
    "backup_count": 3
  },
  "display": {
    "show_trends": true,
    "show_network": true,
    "compact_mode": false,
    "color_scheme": "default",
    "show_load_average": true,
    "show_connection_count": true
  },
  "adaptive_settings": {
    "high_activity_cpu_threshold": 50,
    "high_activity_memory_threshold": 70,
    "very_high_activity_cpu_threshold": 80,
    "very_high_activity_memory_threshold": 85,
    "min_refresh_rate": 0.5,
    "max_refresh_rate": 5.0,
    "refresh_rate_multipliers": {
      "idle": 1.5,
      "normal": 1.0,
      "high": 0.5,
      "critical": 0.25
    }
  },
  "network_monitoring": {
    "enabled": true,
    "show_bandwidth": true,
    "show_connections": true,
    "bandwidth_history_size": 60,
    "interface_filter": []
  },
  "performance": {
    "concurrent_agent_checks": true,
    "connection_pool_size": 10,
    "request_timeout": 2,
    "max_retries": 1,
    "backoff_factor": 0.1
  }
}