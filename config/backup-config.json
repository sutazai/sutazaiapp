{
  "backup_root": "/opt/sutazaiapp/data/backups",
  "retention_days": 30,
  "compression": true,
  "encryption": false,
  "backup_schedule": {
    "daily": "02:00",
    "weekly": "Sunday 03:00",
    "monthly": "1st 04:00"
  },
  "databases": {
    "postgres": {
      "enabled": true,
      "host": "localhost",
      "port": 5432,
      "databases": ["sutazai_main", "agent_data", "monitoring", "auth"],
      "user": "postgres",
      "password_env": "POSTGRES_PASSWORD",
      "backup_options": {
        "format": "custom",
        "compress": true,
        "verbose": true,
        "clean": true,
        "if_exists": true,
        "create": true
      }
    },
    "sqlite": {
      "enabled": true,
      "databases": [
        "/opt/sutazaiapp/data/flowise/database.sqlite",
        "/opt/sutazaiapp/data/langflow/langflow.db",
        "/opt/sutazaiapp/data/n8n/database.sqlite",
        "/opt/sutazaiapp/data/garbage-collection.db",
        "/opt/sutazaiapp/data/disaster-recovery-tests.db",
        "/opt/sutazaiapp/data/shutdown-state.db",
        "/opt/sutazaiapp/monitoring/hygiene.db",
        "/opt/sutazaiapp/monitoring/simple.db",
        "/opt/sutazaiapp/monitoring/logs.db"
      ]
    },
    "loki": {
      "enabled": true,
      "data_path": "/opt/sutazaiapp/data/loki",
      "backup_strategy": "full"
    }
  },
  "offsite": {
    "enabled": true,
    "type": "rsync",
    "destination": "/mnt/backup-drive/sutazai-backups",
    "remote_host": null,
    "sync_options": ["-avz", "--delete", "--exclude=*.tmp"],
    "retention_offsite_days": 90
  },
  "verification": {
    "enabled": true,
    "test_restore": true,
    "checksum_validation": true,
    "sample_size": 0.1
  },
  "monitoring": {
    "webhook_url": null,
    "email_notifications": false,
    "slack_webhook": null,
    "alert_on_failure": true,
    "alert_on_success": false
  },
  "3_2_1_strategy": {
    "local_copies": 2,
    "offsite_copies": 1,
    "different_media": ["disk", "network"],
    "validation_frequency": "daily"
  }
}