# SutazAI Environment Configuration Template
# Copy this file to .env and update with your secure values
# WARNING: Never commit the .env file to version control

# Database Configuration
DATABASE_URL=postgresql://sutazai:CHANGE_THIS_PASSWORD@localhost:5432/sutazai
POSTGRES_PASSWORD=CHANGE_THIS_POSTGRES_PASSWORD

# Redis Configuration  
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# API Keys and Secrets
PRIMARY_API_KEY=GENERATE_SECURE_API_KEY_HERE
SECONDARY_API_KEY=GENERATE_SECURE_API_KEY_HERE
SECRET_KEY=GENERATE_SECURE_SECRET_KEY_HERE

# SMTP Configuration
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# SSH and Deployment Configuration
SSH_USER=sutazaiapp_dev
DEPLOY_SERVER=192.168.100.100
SSH_KEY_PATH=/root/.ssh/sutazaiapp_sync_key

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# Administrative Contact (for alerts only)
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PHONE=+1234567890