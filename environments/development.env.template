# Development Environment Template (non-secret)
# Copy to environments/development.env and fill overrides locally.

SUTAZAI_ENV=development
TZ=UTC
DEBUG=true
LOG_LEVEL=DEBUG

# Core services
POSTGRES_USER=sutazai
POSTGRES_PASSWORD=change_me_secure
POSTGRES_DB=sutazai
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

REDIS_PASSWORD=change_me_secure
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

NEO4J_USER=neo4j
NEO4J_PASSWORD=change_me_secure
NEO4J_HOST=neo4j
NEO4J_HTTP_PORT=10002
NEO4J_BOLT_PORT=10003

# Security keys (development-only placeholders)
SECRET_KEY=dev_change_me_hex_64
JWT_SECRET=dev_change_me_hex_64
JWT_ALGORITHM=HS256

# AI/ML
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_BASE_URL=http://ollama:11434
DEFAULT_MODEL=tinyllama

# Feature flags (off by default)
ENABLE_FSDP=false
ENABLE_TABBY=false

# Observability
ENABLE_MONITORING=true
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=dev_password

# CORS
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:10011"]
