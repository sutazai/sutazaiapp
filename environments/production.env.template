# Production Environment Template (no secrets)
# Copy to environments/production.env and source real values from a secrets manager.

SUTAZAI_ENV=production
TZ=UTC
NODE_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# Database
POSTGRES_USER=sutazai
POSTGRES_PASSWORD=${POSTGRES_PASSWORD:?set securely}
POSTGRES_DB=sutazai
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis
REDIS_PASSWORD=${REDIS_PASSWORD:?set securely}
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# Neo4j
NEO4J_USER=neo4j
NEO4J_PASSWORD=${NEO4J_PASSWORD:?set securely}
NEO4J_HOST=neo4j
NEO4J_HTTP_PORT=10002
NEO4J_BOLT_PORT=10003

# RabbitMQ
RABBITMQ_DEFAULT_USER=sutazai
RABBITMQ_DEFAULT_PASS=${RABBITMQ_PASSWORD:?set securely}
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
AMQP_URL=amqp://${RABBITMQ_DEFAULT_USER}:${RABBITMQ_DEFAULT_PASS}@${RABBITMQ_HOST}:${RABBITMQ_PORT}

# Security Keys
SECRET_KEY=${SECRET_KEY:?set securely}
JWT_SECRET=${JWT_SECRET:?set securely}
JWT_ALGORITHM=HS256
ENCRYPTION_KEY=${ENCRYPTION_KEY:?set securely}
API_ENCRYPTION_KEY=${API_ENCRYPTION_KEY:?set securely}

# Observability
ENABLE_MONITORING=true
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=${GRAFANA_PASSWORD:?set securely}

# AI/ML
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_BASE_URL=http://${OLLAMA_HOST}:${OLLAMA_PORT}
DEFAULT_MODEL=tinyllama
CHROMADB_API_KEY=${CHROMADB_API_KEY:?set securely}
QDRANT_API_KEY=${QDRANT_API_KEY:?set securely}
FAISS_API_KEY=${FAISS_API_KEY:?set securely}

# Feature Flags
ENABLE_FSDP=false
ENABLE_TABBY=false

# CORS
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:10011"]
