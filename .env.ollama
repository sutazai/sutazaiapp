# Ollama High-Concurrency Performance Settings
OLLAMA_NUM_PARALLEL=50
OLLAMA_MAX_LOADED_MODELS=3
OLLAMA_KEEP_ALIVE=10m
OLLAMA_CPU_THREADS=10
OLLAMA_GPU_LAYERS=0
OLLAMA_MODELS=/var/lib/ollama
OLLAMA_HOST=0.0.0.0:11434

# Memory Configuration
OLLAMA_MAX_MEMORY=20480
OLLAMA_FLASH_ATTENTION=1
OLLAMA_MEMORY_MAPPING=1

# Network and Connection Settings
OLLAMA_ORIGINS=*
OLLAMA_MAX_CONNECTIONS=200
OLLAMA_REQUEST_TIMEOUT=120
OLLAMA_QUEUE_SIZE=500

# Performance Optimizations
OLLAMA_CONCURRENT_REQUESTS=50
OLLAMA_BATCH_SIZE=32
OLLAMA_CACHE_SIZE=4096
OLLAMA_PRELOAD_MODELS=tinyllama

# Timeout Configuration
OLLAMA_TIMEOUT=300
OLLAMA_IDLE_TIMEOUT=600
OLLAMA_STARTUP_TIMEOUT=120

# System Optimizations
OLLAMA_NOPRUNE=false
OLLAMA_SCHEDULE=0
OLLAMA_NUMA_POLICY=preferred

# Logging Configuration
OLLAMA_DEBUG=false
OLLAMA_LOG_LEVEL=info
OLLAMA_METRICS=true

# Model Configuration
DEFAULT_MODEL=tinyllama
USE_NATIVE_OLLAMA=true
OLLAMA_DEFAULT_MODEL=tinyllama

# Connection Pool Settings
OLLAMA_POOL_SIZE=100
OLLAMA_POOL_TIMEOUT=30
OLLAMA_POOL_RECYCLE=3600
