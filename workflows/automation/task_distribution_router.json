{
  "task_distribution_system": {
    "name": "Intelligent Task Distribution Router",
    "version": "1.0",
    "description": "Automatically routes tasks to the most suitable agents based on capabilities, workload, and performance",
    "enabled": true
  },
  "routing_strategies": {
    "capability_matching": {
      "weight": 0.4,
      "algorithm": "fuzzy_match",
      "threshold": 0.7,
      "description": "Match task requirements with agent capabilities"
    },
    "workload_balancing": {
      "weight": 0.3,
      "algorithm": "least_loaded",
      "max_queue_size": 10,
      "description": "Distribute tasks to agents with lowest current workload"
    },
    "performance_optimization": {
      "weight": 0.2,
      "algorithm": "weighted_success_rate",
      "history_window": 100,
      "description": "Route to agents with best recent performance"
    },
    "availability_check": {
      "weight": 0.1,
      "algorithm": "health_status",
      "timeout": 5,
      "description": "Ensure target agent is healthy and responsive"
    }
  },
  "agent_profiles": {
    "agi-system-architect": {
      "capabilities": [
        "system_design",
        "architecture_optimization",
        "integration_planning",
        "scalability_design",
        "technical_specification",
        "infrastructure_planning"
      ],
      "specializations": ["enterprise_architecture", "microservices", "cloud_native"],
      "max_concurrent_tasks": 5,
      "avg_response_time": 120,
      "success_rate": 0.95,
      "priority_level": "critical"
    },
    "ai-product-manager": {
      "capabilities": [
        "requirement_analysis",
        "web_search",
        "project_coordination",
        "solution_research",
        "stakeholder_management",
        "strategic_planning"
      ],
      "specializations": ["product_strategy", "market_research", "user_experience"],
      "max_concurrent_tasks": 8,
      "avg_response_time": 60,
      "success_rate": 0.92,
      "priority_level": "critical"
    },
    "autonomous-system-controller": {
      "capabilities": [
        "autonomous_control",
        "decision_making",
        "resource_allocation",
        "self_healing",
        "system_monitoring",
        "emergency_response"
      ],
      "specializations": ["system_orchestration", "crisis_management", "optimization"],
      "max_concurrent_tasks": 3,
      "avg_response_time": 30,
      "success_rate": 0.98,
      "priority_level": "critical"
    },
    "senior-ai-engineer": {
      "capabilities": [
        "ml_architecture",
        "model_optimization",
        "rag_development",
        "agi_design",
        "neural_networks",
        "deep_learning"
      ],
      "specializations": ["transformer_models", "reinforcement_learning", "computer_vision"],
      "max_concurrent_tasks": 4,
      "avg_response_time": 180,
      "success_rate": 0.94,
      "priority_level": "critical"
    },
    "infrastructure-devops-manager": {
      "capabilities": [
        "container_management",
        "deployment_automation", 
        "monitoring",
        "infrastructure_scaling",
        "ci_cd_pipelines",
        "kubernetes"
      ],
      "specializations": ["docker", "kubernetes", "terraform", "ansible"],
      "max_concurrent_tasks": 6,
      "avg_response_time": 90,
      "success_rate": 0.93,
      "priority_level": "critical"
    },
    "code-generation-improver": {
      "capabilities": [
        "code_analysis",
        "refactoring",
        "optimization",
        "best_practices",
        "code_generation",
        "static_analysis"
      ],
      "specializations": ["python", "javascript", "typescript", "go", "rust"],
      "max_concurrent_tasks": 7,
      "avg_response_time": 45,
      "success_rate": 0.91,
      "priority_level": "high"
    },
    "testing-qa-validator": {
      "capabilities": [
        "test_automation",
        "quality_assurance",
        "security_testing",
        "performance_testing",
        "integration_testing",
        "regression_testing"
      ],
      "specializations": ["pytest", "selenium", "jest", "cypress", "k6"],
      "max_concurrent_tasks": 8,
      "avg_response_time": 75,
      "success_rate": 0.89,
      "priority_level": "high"
    }
  },
  "task_categories": {
    "system_architecture": {
      "preferred_agents": ["agi-system-architect", "senior-ai-engineer"],
      "fallback_agents": ["ai-product-manager"],
      "priority": "high",
      "timeout": 1800
    },
    "project_management": {
      "preferred_agents": ["ai-product-manager", "ai-scrum-master"],
      "fallback_agents": ["autonomous-system-controller"],
      "priority": "medium",
      "timeout": 900
    },
    "code_development": {
      "preferred_agents": ["code-generation-improver", "senior-backend-developer", "senior-frontend-developer"],
      "fallback_agents": ["senior-ai-engineer"],
      "priority": "high",
      "timeout": 1200
    },
    "infrastructure": {
      "preferred_agents": ["infrastructure-devops-manager", "deployment-automation-master"],
      "fallback_agents": ["hardware-resource-optimizer"],
      "priority": "critical",
      "timeout": 600
    },
    "testing_validation": {
      "preferred_agents": ["testing-qa-validator", "security-pentesting-specialist"],
      "fallback_agents": ["code-generation-improver"],
      "priority": "high",
      "timeout": 900
    },
    "monitoring_optimization": {
      "preferred_agents": ["hardware-resource-optimizer", "context-optimization-engineer"],
      "fallback_agents": ["system-optimizer-reorganizer"],
      "priority": "medium",
      "timeout": 600
    }
  },
  "routing_rules": [
    {
      "condition": "task.priority == 'emergency'",
      "action": "route_to",
      "target": "autonomous-system-controller",
      "bypass_queue": true
    },
    {
      "condition": "task.category == 'security'",
      "action": "route_to",
      "target": "security-pentesting-specialist",
      "require_approval": true
    },
    {
      "condition": "agent.queue_size > max_concurrent_tasks",
      "action": "find_alternative",
      "strategy": "capability_match"
    },
    {
      "condition": "agent.health_status != 'healthy'",
      "action": "skip",
      "log_event": true
    },
    {
      "condition": "task.estimated_duration > 3600",
      "action": "split_task",
      "max_subtasks": 5
    }
  ],
  "workflow_automation": {
    "auto_routing": {
      "enabled": true,
      "confidence_threshold": 0.8,
      "manual_review_required": false
    },
    "load_balancing": {
      "enabled": true,
      "rebalance_interval": 300,
      "max_imbalance_ratio": 2.0
    },
    "failure_handling": {
      "auto_retry": true,
      "max_retries": 3,
      "backoff_strategy": "exponential",
      "escalation_enabled": true
    },
    "performance_tracking": {
      "enabled": true,
      "metrics": ["response_time", "success_rate", "throughput", "resource_usage"],
      "reporting_interval": 3600
    }
  },
  "integration_points": {
    "agent_registry": {
      "endpoint": "http://agent-registry:8300/api/v1",
      "health_check_path": "/health",
      "capabilities_path": "/agents/{agent_id}/capabilities"
    },
    "message_bus": {
      "endpoint": "http://agent-message-bus:8299/api/v1",
      "task_queue": "task_distribution",
      "result_queue": "task_results"
    },
    "monitoring": {
      "prometheus_metrics": true,
      "grafana_dashboard": true,
      "alert_manager": true
    }
  }
}