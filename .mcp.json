{
	"mcpServers": {
		"task-master-ai": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"--package=task-master-ai",
				"task-master-ai"
			],
			"env": {
				"OLLAMA_BASE_URL": "http://localhost:11434",
				"TASKMASTER_MODELS_LOCAL": "true",
				"TASKMASTER_OLLAMA_URL": "http://localhost:11434"
			}
		},
		"sutazai-mcp-server": {
			"type": "stdio",
			"command": "node",
			"args": [
				"/opt/sutazaiapp/mcp_server/index.js"
			],
			"env": {
				"DATABASE_URL": "postgresql://sutazai:sutazai_password@localhost:5432/sutazai",
				"REDIS_URL": "redis://:redis_password@localhost:6379/0",
				"BACKEND_API_URL": "http://localhost:8000",
				"OLLAMA_URL": "http://localhost:11434",
				"CHROMADB_URL": "http://localhost:8000",
				"QDRANT_URL": "http://localhost:6333",
				"NEO4J_URL": "bolt://localhost:7687",
				"LOG_LEVEL": "INFO",
				"MAX_CONCURRENT_TASKS": "10",
				"TASK_TIMEOUT_SECONDS": "300",
				"ENABLE_AGENT_DEPLOYMENT": "true",
				"ENABLE_MODEL_MANAGEMENT": "true",
				"ENABLE_KNOWLEDGE_QUERIES": "true",
				"ENABLE_SYSTEM_MONITORING": "true",
				"ENABLE_MULTI_AGENT_ORCHESTRATION": "true"
			}
		}
	}
}
